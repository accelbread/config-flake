root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[{*.nix,flake.lock}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 72

[*.rs]
max_line_length = 100
